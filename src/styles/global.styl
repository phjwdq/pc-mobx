@import './mixin.styl'

:global
    @import './reset.styl'
    .log-reg-field
        height px2rem(122)
        flexbox()
        justify-content(space-between)
        align-items(center)
        border-bottom 1px solid #aeb9ca
        position relative
        color #b2bbca
        input
            px2px(30)
            height 100%
            width 100%
            border none
            background none
            color #ff9500
        em
            min-width px2rem(50)
            height 100%
            inline-flex()
            justify-content(center)
            align-items(center)
    // alert
    .ui-alert-content
        width px2rem(610)
        background #fff
        color #5f6976
        border-radius px2rem(14)
        px2px(32)
        margin 0 auto
        p
            line-height 1.5
            padding px2rem(83) px2rem(32) px2rem(66)

    .ui-alert-btn
        color #ff9500
        height px2rem(90)
        line-height px2rem(90)
        text-align center
        border-top 1px solid #dedede
        px2px(36)
